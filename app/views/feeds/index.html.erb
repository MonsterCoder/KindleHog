	<h1>All items</h1>

	<%=button_to "Send to kindle", {:controller=>'publish', :action=>'create'}%>
	<div class="feed_entry">
			<% for entry in @entries%>
		  		<h3><%= entry.title %> </h3>
				<b ><%=entry.dc_creator%> <%= entry.pubDate%> </b><br/>
			
				<%=sanitize entry.description%>
				<%= link_to "[..]", entry.link%> <br/><br/>
			<%end%>
	</div>




